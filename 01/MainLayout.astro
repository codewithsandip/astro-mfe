---
import Logo from "../components/Logo.astro";
import MainNav from "../components/MainNav.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Astro Shell</title>

    <style is:global>
      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        background: #f9fafb;
        color: #111827;
      }

      header.app-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 24px;
        background: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
      }

      .header-left {
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .app-title {
        font-size: 1.1rem;
        font-weight: 600;
      }

      .header-right {
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .header-button {
        border-radius: 9999px;
        border: 1px solid #cbd5f5;
        padding: 6px 12px;
        background: #e5edff;
        font-size: 0.85rem;
        cursor: pointer;
      }

      .header-button:hover {
        background: #dbeafe;
      }

      .user-avatar {
        width: 30px;
        height: 30px;
        border-radius: 9999px;
        background: #c7d2fe;
      }

      main#remote-container {
        padding: 24px;
        min-height: calc(100vh - 100px);
      }
    </style>

    <!-- Load your remote bundles here -->
    <!-- Example:
    <script src="/remotes/remote-vite-app.iife.js"></script>
    <script src="/remotes/remote-webpack-app.iife.js"></script>
    -->
  </head>

  <body>
    <!-- Header -->
    <header class="app-header">
      <div class="header-left">
        <Logo size={32} />
        <span class="app-title">My Micro-Frontend Platform</span>
      </div>

      <div class="header-right">
        <button class="header-button">Docs</button>
        <button class="header-button">Support</button>
        <div class="user-avatar" aria-label="User"></div>
      </div>
    </header>

    <!-- Tabs Navigation -->
    <MainNav />

    <!-- Micro-frontend container (remote slot) -->
    <main id="remote-container"></main>
  </body>
</html>
